<view class="container">
  <view class="header">
    <view class="header-warp">
      <image src="/assets/imgs/ic_search.png" />
      搜索
    </view>
  </view>
  <view class="main">
    <view class="hotMoves">
      <view class="hot_header">
        <view class="title">影院热映</view>
