              <image class="starimage" src="/assets/imgs/rating_star_small_half.png" wx:elif="{{item.subject.rating.stars/10 >= index && item.rating.stars%10 != 0}}" />
              <image class="starimage" src="/assets/imgs/rating_star_small_off.png" wx:else />
            </view>
            <view class="score">{{item.subject.rating.average}}</view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
</view>