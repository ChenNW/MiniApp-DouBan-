/* pages/Profile/profile.wxss */

.version {
    position: absolute;
    bottom: 50rpx;
    color: lightgray;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.bgImage {
    height: 400rpx;
    position: absolute;
    z-index: -1;
    width: 100%;
}

.BGView {
    display: flex;
    height: 400rpx;
    justify-content: center;
    align-items: center;
}

.login {
    width: 300rpx;
    height: 80rpx;
    color: lightslategray;
    background-color: #fff;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
}

.MyVideoAndBook {
    display: flex;
}

.MyVideoAndBook .myBook {
    padding-left: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.MyVideoAndBook .SeeMore {
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    right: 40rpx;
    color: lightslategrey;
}


/* 列表 */

.text_content {
    color: gray;
    font-size: 40rpx;
    text-align: center;
    border-bottom: 1rpx solid #f5f5f5;
    height: 100rpx;
    line-height: 100rpx;
}