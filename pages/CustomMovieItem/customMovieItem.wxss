/* pages/CustomMovieItem/customMovieItem.wxss */

.signleItem {
    /* background-color: red; */
    width: 190rpx;
    height: 350rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 2rpx 2rpx rgba(0, 0, 0, 0.05);
    display: inline-block;
    vertical-align: top;
    margin-bottom: 30rpx;
}

.hide {
    visibility: hidden;
}

.move_title {
    font-size: 30rpx;
    /* 超过一行隐藏 */
    overflow: hidden;
    /* 文字隐藏后添加省略号 */
    text-overflow: ellipsis;
    /* 不换行 */
    white-space: nowrap;
}

.bottomView {
    font-size: 26rpx;
    height: 42rpx;
    width: 100%;
    color: #AEAEAE;
    display: flex;
}

.cover_image {
    width: 100%;
    height: 250rpx;
    border-radius: 10rpx;
}

.starimage {
    width: 24rpx;
    height: 24rpx;
}

.score {
    margin-left: 10rpx;
}